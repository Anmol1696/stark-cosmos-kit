{
  "name": "@cosmos-kit/web3auth",
  "version": "2.0.0",
  "description": "cosmos-kit wallet connector for Web3Auth",
  "author": "noah@noah.zone",
  "contributors": [
    {
      "name": "Noah Saso"
    }
  ],
  "homepage": "https://github.com/cosmology-tech/cosmos-kit#readme",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "tsup": {
    "clean": true,
    "dts": true,
    "dts-resolve": true,
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "sourcemap": true,
    "skipNodeModulesBundle": true
  },
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "npm rum build",
    "dev": "yarn watch",
    "watch": "tsup --watch",
    "lint": "eslint --ext .tsx,.ts .",
    "format": "eslint --ext .tsx,.ts --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmology-tech/cosmos-kit"
  },
  "keywords": [
    "cosmos-kit",
    "cosmos",
    "leap",
    "wallet"
  ],
  "bugs": {
    "url": "https://github.com/cosmology-tech/cosmos-kit/issues"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist/"
    ]
  },
  "dependencies": {
    "@cosmos-kit/core": "^2.0.0",
    "@solana/web3.js": "^1.78.0",
    "@web3auth/base": "^5.1.0",
    "@web3auth/no-modal": "^5.1.0",
    "@web3auth/openlogin-adapter": "^5.1.1",
    "libsodium-wrappers-sumo": "^0.7.11"
  },
  "peerDependencies": {
    "@cosmjs/amino": ">= 0.28",
    "@cosmjs/proto-signing": ">= 0.28",
    "@keplr-wallet/cosmos": ">= 0.10",
    "chain-registry": "*",
    "cosmjs-types": ">= 0.5"
  },
  "gitHead": "0f174bf8c1799158d87dfcfb97c642e51835b8d0"
}
