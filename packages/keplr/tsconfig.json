{
  "compilerOptions": {
    "target": "es2022",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist/lib",
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}