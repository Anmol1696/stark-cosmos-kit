{
  "compilerOptions": {
    "target": "es2022",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}