{
  "compilerOptions": {
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "sourcemap": true,
    "skipNodeModulesBundle": true,
    "isolatedModules": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
